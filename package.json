{
  "name": "social_network",
  "version": "1.0.0",
  "description": "A developers' social network (static linkedin kind)",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Ashish Paudel",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "concurrently": "4.1.0",
    "cors": "2.8.5",
    "express": "4.17.0",
    "gravatar": "1.8.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.7.5",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "validator": "11.0.0"
  },
  "devDependencies": {
    "nodemon": "1.19.0"
  }
}
